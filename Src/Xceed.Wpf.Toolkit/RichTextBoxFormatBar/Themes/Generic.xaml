  <conv:ColorToSolidColorBrushConverter x:Key="ColorToSolidColorBrushConverter" />

  <ControlTemplate x:Key="ThumbControlTemplate"
                   TargetType="{x:Type Thumb}">
    <Border Background="Transparent"
            Cursor="Hand"
            ToolTip="Click to Drag">
      <StackPanel VerticalAlignment="Center"
                  Width="75">
        <Line SnapsToDevicePixels="True"
              Stretch="Fill"
              StrokeDashArray="1,2"
              StrokeThickness="1"
              X1="0"
              X2="1"
              Margin=".5">
          <Line.Stroke>
            <SolidColorBrush Color="Gray" />
          </Line.Stroke>
        </Line>
        <Line SnapsToDevicePixels="True"
              Stretch="Fill"
              StrokeDashArray="1,2"
              StrokeThickness="1"
              X1="0"
              X2="1"
              Margin=".5">
          <Line.Stroke>
            <SolidColorBrush Color="Gray" />
          </Line.Stroke>
        </Line>
        <Line SnapsToDevicePixels="True"
              Stretch="Fill"
              StrokeDashArray="1,2"
              StrokeThickness="1"
              X1="0"
              X2="1"
              Margin=".5">
          <Line.Stroke>
            <SolidColorBrush Color="Gray" />
          </Line.Stroke>
        </Line>
      </StackPanel>
    </Border>
  </ControlTemplate>

